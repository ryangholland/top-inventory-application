<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h2><%= title %></h2>
    <hr />

    <a href="/genres/create">Add Genre</a>
    <br />
    <br />

    <table border="1" id="booksTable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (locals.genres) {%> <% genres.forEach(genre => { %>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <a href="/genres/<%= genre.id %>/update"><button>Edit</button></a> |
            <form
              action="/genres/<%= genre.id %>/delete"
              method="POST"
              style="display: inline"
            >
              <button
                type="submit"
                onclick="return confirm('Are you sure you want to delete this genre? Any books in this genre will also be deleted.');"
              >
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %> <% } %>
      </tbody>
    </table>

    <br />
    <a href="/">Index</a>
  </body>
</html>
