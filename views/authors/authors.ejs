<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h2><%= title %></h2>
    <hr />

    <a href="/authors/create">Add Author</a>
    <br />
    <br />

    <table border="1" id="booksTable">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (locals.authors) {%> <% authors.forEach(author => { %>
        <tr>
          <td><%= author.first_name %></td>
          <td><%= author.last_name %></td>
          <td>
            <a href="/authors/<%= author.id %>/update"><button>Edit</button></a>
            |
            <form
              action="/authors/<%= author.id %>/delete"
              method="POST"
              style="display: inline"
            >
              <button
                type="submit"
                onclick="return confirm('Are you sure you want to delete this author? Any books written by this author will also be deleted.');"
              >
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %> <% } %>
      </tbody>
    </table>

    <br />
    <a href="/">Index</a>
  </body>
</html>
