<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h2><%= title %></h2>
    <hr />
    <table border="1" id="booksTable">
      <thead>
        <tr>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <% if (locals.authors) {%> <% authors.forEach(author => { %>
        <tr>
          <td><%= author.first_name %> <%= author.last_name %></td>
        </tr>
        <% }) %> <% } %>
      </tbody>
    </table>

    <br />
    <a href="/">Index</a>
  </body>
</html>
