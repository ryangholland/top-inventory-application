<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h2><%= title %></h2>
    <hr />

    <a href="/books/create">Add Book</a>
    <br />
    <br />

    <table border="1" id="booksTable">
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Genre</th>
          <th>Pages</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (locals.books) {%> <% books.forEach(book => { %>
        <tr>
          <td><%= book.book_title %> </td>
          <td><%= book.author_name %></td>
          <td><%= book.genre_name %></td>
          <td><%= book.pages %></td>

          <td>
            <a href="/books/<%= book.book_id %>/update"><button>Edit</button></a>
            |
            <form
              action="/books/<%= book.book_id %>/delete"
              method="POST"
              style="display: inline"
            >
              <button
                type="submit"
                onclick="return confirm('Are you sure you want to delete this book?');"
              >
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %> <% } %>
      </tbody>
    </table>

    <br />
    <a href="/">Index</a>
  </body>
</html>
